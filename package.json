{
  "name": "github-status-action-v2",
  "version": "1.0.0",
  "private": true,
  "description": "Github status action V2",
  "main": "lib/main.js",
  "scripts": {
    "build": "tsc",
    "test": "ava",
    "format": "prettier --write **/*.ts",
    "format-check": "prettier --check **/*.ts",
    "lint": "eslint src/**/*.ts",
    "pack": "ncc build",
    "all": "npm run build && npm run format && npm run lint && npm test && npm run pack",
    "push": "npm run build && npm run pack && git add * && git commit -m \"ci: update built file\" && git push" 
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/GuiBranco/github-status-action-v2.git"
  },
  "keywords": [
    "actions",
    "node",
    "setup"
  ],
  "author": "GuiBranco",
  "license": "MIT",
  "dependencies": {
    "@actions/core": "^1.10.1",
    "@actions/github": "^5.0.3"
  },
  "devDependencies": {
    "@octokit/types": "^9.2.1",
    "@types/node": "20.1.2",
    "@vercel/ncc": "^0.38.0",
    "ava": "^3.8.1",
    "ts-node": "^10.9.1",
    "typescript": "^5.2.2"
  },
  "ava": {
    "extensions": [
      "ts"
    ],
    "require": [
      "ts-node/register"
    ]
  }
}
